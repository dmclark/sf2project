{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Package</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Cycle_length</th>
                <td>{{ entity.cyclelength }}</td>
            </tr>
            <tr>
                <th>Cycle_days_open</th>
                <td>{{ entity.cycledaysopen }}</td>
            </tr>
            <tr>
                <th>Has_events</th>
                <td>{{ entity.hasevents }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('package') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('package_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('package_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
